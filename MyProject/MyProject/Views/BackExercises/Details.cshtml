@model MyProject.Models.BackExercises

@{
    ViewData["Title"] = "Exercise Details";
}

<div>
    <div class="static">
        <h1 class="body-part-text" style="font-size: 40px; width: 400px;">Edit Exercise</h1>
    </div>

    <div>
        <h4>BackExercises</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BackPart)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BackPart)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ExerciseName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ExerciseName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Reps)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Reps)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BreakTime)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BreakTime)
            </dd>
        </dl>
    </div>
    <div style="text-align: center;">
        <a asp-action="Edit" asp-route-id="@Model.ExerciseId">Edit</a> |
        <a asp-action="Index" style="font-size: 20px;">Back to List</a>
    </div>
</div>